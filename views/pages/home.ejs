						</form>
					</div>
					<div class="container" id="toDoContainer">
						<form action="/home/todos" method="post">
						<tr>
							<div class="form-group" id="toDoRow">
								<th>To Do</th>
								<button id="editButton" class="btn btn-sm btn" style="font-size:24px" onclick="onClickFunction(
								<%=user_classes[0].classes.length%>
								)"> <i class="fa">&#xf044;</i></button>
								<button type="submit" id="doneEditing" class="btn btn-sm btn" style="font-size: 24px" disabled onclick="onClickDone(<%=user_classes[0].classes.length%>)"> <i class="fa">&#xf058;</i></button>
							</div>
						</tr>
						<%if(user_classes){//populates todo list with current classes user is taking
							var todo_rows = '';
							var i = 1;
							user_classes[0].classes.forEach(function(each_class){
								var class_index = each_class-1//class ids start at 1, classes array starts at 0
								todo_rows += '<div class="form-group"><th>'+data[class_index].class_name+'</th><input type="text" class="form-control" id="class'+i+'" name="class'+i+'" placeholder="" maxlength="50" disabled onclick="onClickFunction()"></div>';
								i += 1;
							});%>
						  	<%- todo_rows %>
						<% }%>
						<input type="submit" class="btn btn-info btn-block" value="Submit"><br><br><br><br><br>
					</form>

					</div>
				</div>
			</div>

			<div class="col-8" style="width: 25rem;"> <!-- action="/home" method="get" -->
			<% 
			if (my_data) { 
			    var rows = '';
				my_data[0].classes.forEach(function(class_item){
					//my_data should only return one data row that matches the current user
					//class_item = each class in classes array from user_todos
					//rows+= adds a new table for each class 
					var class_index = class_item-1
					rows += '<table class="table table-hover" id="class'+class_index+'"><tbody><tr><br><h2>'+data[class_index].class_name+'</h2></tr><tr><th><b>Active Users</b></th>							<th><b>Working On</b></th><th><b>Location</b></th><th><b>Location Description</b></th></tr>';
					other_userdata.forEach(function(user){//for each user
						var i = 0;
						user.classes.forEach(function(user_class){//iterate through class array to find match with current class
							if(user_class == class_item){
								rows += '<tr><td>'+user.first_name+' '+user.last_name+'</td>';
								rows += '<td>'+user.todos[0]+'</td>';
								rows += '<td>'+user.location+'</td>';
								rows += '<td>'+user.location_desc+'</td></tr>';
							}
							i += 1;
						})
					})
					rows += '</tbody><table>';
				// })
			  	});%>
			  	<%- rows %>
			<% } %>
		  	</div>
		</div>
