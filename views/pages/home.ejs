		<script>
			function onClickFunction(a){
				var i;
				for (i=1; i<=a; i++){
					document.getElementById("class"+i).disabled = false;
				}
				document.getElementById("editButton").disabled = true;
				document.getElementById("doneEditing").disabled = false;
				document.getElementById("doneEditing").style.color = 'green';
			}
		</script>
		<script>
			function onClickDone(a){
				document.getElementById("doneEditing").disabled = true;
				document.getElementById("editButton").disabled = false;
				document.getElementById("doneEditing").style.color = 'gray';
				var i;
				for (i=1; i<=a; i++){
					document.getElementById("class"+i).disabled = true;
				}
			}
		</script>
		<script>
			function toggleFunction(){
				if(document.getElementById("status").innerHTML === "Inactive"){
					document.getElementById("status").innerHTML = "Active";
					document.getElementById("location").disabled = true;
					document.getElementById("location_desc").disabled = true;


				}
				else{
					document.getElementById("status").innerHTML = "Inactive";
					document.getElementById("location").disabled = false;
					document.getElementById("location_desc").disabled = false;

				}

				
			}
